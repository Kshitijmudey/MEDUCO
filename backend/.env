# MEDUCO Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./database/meduco.db

# JWT Configuration
JWT_SECRET=meduco_jwt_secret_key_2024_healthcare_platform
JWT_EXPIRES_IN=7d

# Email Configuration (for password reset, notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# Security
BCRYPT_ROUNDS=12

# API Configuration
API_PREFIX=/api/v1